.stats-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.stats-content {
  display: flex;
  justify-content: space-around;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.stats-value {
  font-size: 36rpx;
  color: var(--primary-color);
  font-weight: bold;
}

.history-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.task-item {
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}

.task-item:last-child {
  border-bottom: none;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.task-title {
  font-size: 30rpx;
  color: #333;
}

.task-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.task-status.completed {
  color: var(--success-color);
  background: rgba(7, 193, 96, 0.1);
}

.task-status.failed {
  color: var(--danger-color);
  background: rgba(238, 10, 36, 0.1);
}

.task-status.ongoing {
  color: var(--primary-color);
  background: rgba(25, 137, 250, 0.1);
}

.task-time {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

.container {
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0;
  color: #333;
}

.task-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.task-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.task-item:last-child {
  border-bottom: none;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.task-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.task-time {
  font-size: 24rpx;
  color: #999;
}

.task-description {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.empty-state {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}