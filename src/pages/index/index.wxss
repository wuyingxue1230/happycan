.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.task-list {
  margin-bottom: 120rpx; /* 为底部按钮留出空间 */
}

.task-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.task-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.countdown {
  font-size: 48rpx;
  color: #1989fa;
  text-align: center;
  margin: 20rpx 0;
}

.progress-container {
  display: flex;
  justify-content: center;
  margin: 30rpx 0;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0;
  padding: 20rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
}

.progress-update {
  margin-top: 30rpx;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.add-button-container {
  position: fixed;
  right: 30rpx;
  bottom: 20rpx;
  z-index: 99;
}

.add-button {
  width: 100rpx !important;
  height: 100rpx !important;
  padding: 0 !important;
  border-radius: 50% !important;
  background-color: #07c160 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.3) !important;
}

::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}